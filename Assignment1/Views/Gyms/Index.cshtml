@model IEnumerable<Assignment1.Models.Gym>

@{
    ViewData["Title"] = "Gym List";
}

<h1>Visited Gyms</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradingStyle)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradingStyle)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.GymId">Details</a>
            </td>
                @if (User.Identity.IsAuthenticated)
                {
                <td>
                <a asp-action="Edit" asp-route-id="@item.GymId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.GymId">Delete</a>
                </td>
                }
        </tr>
}
    </tbody>
</table>
